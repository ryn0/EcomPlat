@model EcomPlat.Data.Models.BusinessDetails
@{
    ViewData["Title"] = "Business Details";
}

<h2>Details</h2>

<div>
    <h4>Business Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">
            @Model.AddressLine1<br />
            @if (!string.IsNullOrEmpty(Model.AddressLine2))
            {
                @Model.AddressLine2

                <br />
            }
        </dd>

        <dt class="col-sm-2">City</dt>
        <dd class="col-sm-10">@Model.City</dd>

        <dt class="col-sm-2">State</dt>
        <dd class="col-sm-10">@Model.StateRegion</dd>

        <dt class="col-sm-2">Postal Code</dt>
        <dd class="col-sm-10">@Model.PostalCode</dd>

        <dt class="col-sm-2">Country</dt>
        <dd class="col-sm-10">@Model.CountryIso</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Phone</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Address Type</dt>
        <dd class="col-sm-10">@Model.AddressType</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.BusinessDetailsId" class="btn btn-primary">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
