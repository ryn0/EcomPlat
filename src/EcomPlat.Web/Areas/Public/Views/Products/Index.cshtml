@model IEnumerable<EcomPlat.Data.Models.Product>

@{
    ViewData["Title"] = "Product Catalog";
    int currentPage = (int)(ViewData["CurrentPage"] ?? 1);
    int pageSize = (int)(ViewData["PageSize"] ?? 10);
    int totalProducts = (int)(ViewData["TotalProducts"] ?? 0);
    int totalPages = (int)Math.Ceiling((double)totalProducts / pageSize);
}

<h2>@ViewData["Title"]</h2>

<!-- Bootstrap row with multiple columns -->
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">
    @foreach (var product in Model)
    {
        <div class="col d-flex justify-content-center">
            <!-- Card container (fixed width if you prefer consistent columns) -->
            <div class="card product-card">
                <!-- Image container, linking to product details -->
                <div class="img-link-wrapper">
                    <a asp-area="Public"
                       asp-controller="Products"
                       asp-action="DetailsByKey"
                       asp-route-productKey="@product.ProductKey">
                        <img src="@product.Images.FirstOrDefault(i => i.Size == EcomPlat.Data.Enums.ImageSize.Medium && i.IsMain == true)?.ImageUrl"
                             class="product-image"
                             alt="@product.Name" />
                    </a>
                </div>
                <!-- Card body for product info -->
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">@product.Price.ToString("C")</p>
                    <a asp-area="Public"
                       asp-controller="Products"
                       asp-action="DetailsByKey"
                       asp-route-productKey="@product.ProductKey"
                       class="btn btn-primary btn-sm mt-auto">
                        View
                    </a>
                </div>
            </div>
        </div>
    }
</div>

<!-- Paging controls -->
<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center mt-3">
        <li class="page-item @(currentPage <= 1 ? "disabled" : "")">
            <a class="page-link"
               asp-area="Public"
               asp-controller="Products"
               asp-action="Index"
               asp-route-page="@(currentPage - 1)"
               asp-route-pageSize="@(pageSize)">Previous</a>
        </li>
        @for (int i = 1; i <= totalPages; i++)
        {
            <li class="page-item @(i == currentPage ? "active" : "")">
                <a class="page-link"
                   asp-area="Public"
                   asp-controller="Products"
                   asp-action="Index"
                   asp-route-page="@i"
                   asp-route-pageSize="@(pageSize)">@i</a>
            </li>
        }
        <li class="page-item @(currentPage >= totalPages ? "disabled" : "")">
            <a class="page-link"
               asp-area="Public"
               asp-controller="Products"
               asp-action="Index"
               asp-route-page="@(currentPage + 1)"
               asp-route-pageSize="@(pageSize)">Next</a>
        </li>
    </ul>
</nav>
