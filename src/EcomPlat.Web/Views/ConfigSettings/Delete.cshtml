@model EcomPlat.Data.Models.ConfigSetting

@{
    this.ViewData["Title"] = "Delete Config Setting";
}

<h2>@this.ViewData["Title"]</h2>

<h3>Are you sure you want to delete this config setting?</h3>

<div>
    <h4>Config Setting</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@this.Model.ConfigSettingId</dd>
        <dt class="col-sm-2">Site Config Setting</dt>
        <dd class="col-sm-10">@this.Model.SiteConfigSetting</dd>
        <dt class="col-sm-2">Content</dt>
        <dd class="col-sm-10">@this.Model.Content</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ConfigSettingId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
