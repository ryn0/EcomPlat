@using EcomPlat.Data.Enums
@using EcomPlat.Shipping.Constants
@model EcomPlat.Web.Models.CheckoutViewModel
@inject NowPayments.API.Interfaces.INowPaymentsService nowPaymentsService
@using Microsoft.Extensions.Caching.Memory
@inject IMemoryCache memoryCache

@{
    ViewData["Title"] = "Checkout";

    string selectedCurrency = Context.Request.Cookies["currency"] ?? EcomPlat.Data.Enums.Currency.USD.ToString();
    bool showConverted = !string.IsNullOrWhiteSpace(selectedCurrency) && selectedCurrency.ToLower() == EcomPlat.Data.Enums.Currency.XMR.ToString().ToLower();
    string cacheKey = EcomPlat.Web.Constants.StringConstants.CacheKeyConversion;
    decimal conversionRate = 0;

    if (showConverted)
    {
        if (!memoryCache.TryGetValue(cacheKey, out conversionRate))
        {
            var estimateTask = nowPaymentsService.GetEstimatedConversionAsync(1m, EcomPlat.Data.Enums.Currency.USD.ToString(), EcomPlat.Data.Enums.Currency.XMR.ToString());
            estimateTask.Wait();
            var estimate = estimateTask.Result;
            conversionRate = estimate.EstimatedAmount;

            var cacheEntryOptions = new MemoryCacheEntryOptions()
                .SetAbsoluteExpiration(TimeSpan.FromMinutes(5));

            memoryCache.Set(cacheKey, conversionRate, cacheEntryOptions);
        }
    }
}

<h2>@ViewData["Title"]</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}

@if (Model.ShippingAddress == null || string.IsNullOrEmpty(Model.ShippingAddress.AddressLine1))
{
    <p>No shipping address is set. <a asp-action="ShippingAddress">Enter Shipping Address</a></p>
}
else
{
    <h3>Shipping Address</h3>
    <p>
        @Model.ShippingAddress.Name<br />
        @Model.ShippingAddress.AddressLine1<br />
        @if (!string.IsNullOrEmpty(Model.ShippingAddress.AddressLine2))
        {
            @Model.ShippingAddress.AddressLine2

            <br />
        }
        @Model.ShippingAddress.City, @Model.ShippingAddress.StateRegion @Model.ShippingAddress.PostalCode<br />
        @Model.ShippingAddress.CountryIso
    </p>
    <a asp-action="EditShippingAddress" class="btn btn-secondary mb-3">Edit Shipping Address</a>

    <h3>Order Summary</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Cart.Items)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>
                        @EcomPlat.Utilities.Helpers.CurrencyFormatter.Format(item.Product.Price, conversionRate, selectedCurrency)
                    </td>
                    <td>@item.Quantity</td>
                    <td>
                        @EcomPlat.Utilities.Helpers.CurrencyFormatter.Format(item.Product.Price * item.Quantity, conversionRate, selectedCurrency)
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <p>
        <strong>Cart Total:</strong>
        @EcomPlat.Utilities.Helpers.CurrencyFormatter.Format(Model.OrderItemsTotal, conversionRate, selectedCurrency)
        <i>(without shipping)</i>
    </p>

    <p><strong>Product Weight:</strong> @Model.TotalProductWeight.ToString("N2") oz</p>
    <p><strong>Shipping Weight:</strong> @Model.TotalShippingWeight.ToString("N2") oz <i>(without packaging)</i></p>
    <p><strong>Shipping Options:</strong> <i>@StringConstants.DefaultCarrier @StringConstants.DefaultService</i></p>

    <p>
        <strong>Shipping Charge:</strong>
        @EcomPlat.Utilities.Helpers.CurrencyFormatter.Format(Model.ShippingAmount, conversionRate, selectedCurrency)
    </p>

    <p>
        <strong>Grand Total:</strong>
        @EcomPlat.Utilities.Helpers.CurrencyFormatter.Format(Model.GrandTotal, conversionRate, selectedCurrency)     
    </p>

    <h5>Payment Method</h5>
    <p>Monero (NowPayments checkout) <i>Make sure your wallet is synchronized!</i></p>

    <form method="post" asp-action="Checkout" class="mt-3">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label for="email">Email Address</label>
            <input type="email" id="email" name="Email" class="form-control" required />
        </div>

        <div class="form-group mt-3">
            <button type="submit" class="btn btn-success">Place Order</button>
        </div>
    </form>
}
