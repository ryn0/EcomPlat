@model EcomPlat.Data.Models.Warehouse

@{
    ViewData["Title"] = "Warehouse Details";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Warehouse</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Address Line 1</dt>
        <dd class="col-sm-10">@Model.AddressLine1</dd>

        @if (!string.IsNullOrEmpty(Model.AddressLine2))
        {
            <dt class="col-sm-2">Address Line 2</dt>
            <dd class="col-sm-10">@Model.AddressLine2</dd>
        }

        <dt class="col-sm-2">City</dt>
        <dd class="col-sm-10">@Model.City</dd>

        <dt class="col-sm-2">State/Region</dt>
        <dd class="col-sm-10">@Model.StateRegion</dd>

        <dt class="col-sm-2">Postal Code</dt>
        <dd class="col-sm-10">@Model.PostalCode</dd>

        <dt class="col-sm-2">Country</dt>
        <dd class="col-sm-10">@Model.CountryIso</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Phone</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.WarehouseId" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
