@model EcomPlat.Data.Models.Company

@{
    this.ViewData["Title"] = "Company Details";
}

<h2>@this.ViewData["Title"]</h2>

<div>
    <h4>Company</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.CompanyId</dd>
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
    </dl>
</div>

<p>
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.CompanyId">Edit</a>
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</p>
