@model IEnumerable<EcomPlat.Data.Models.Company>

@{
    this.ViewData["Title"] = "Manage Companies";
}

<h2>@this.ViewData["Title"]</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Add New Company</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var company in this.Model)
        {
            <tr>
                <td>@company.Name</td>
                <td>@company.Description</td>
                <td>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@company.CompanyId">Details</a>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@company.CompanyId">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@company.CompanyId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
