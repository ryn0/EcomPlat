@model IEnumerable<EcomPlat.Data.Models.Product>

@{
    ViewData["Title"] = "Product Catalog";
    int currentPage = (int)(ViewData["CurrentPage"] ?? 1);
    int pageSize = (int)(ViewData["PageSize"] ?? 10);
    int totalProducts = (int)(ViewData["TotalProducts"] ?? 0);
    int totalPages = (int)Math.Ceiling((double)totalProducts / pageSize);
    string sortOrder = (string)(ViewData["SortOrder"] ?? "");
}

<h2>@ViewData["Title"]</h2>

@using Microsoft.AspNetCore.Mvc.Rendering
@{
    var sortOptions = new List<SelectListItem>
    {
        new SelectListItem { Value = "", Text = "Default", Selected = string.IsNullOrEmpty(sortOrder) },
        new SelectListItem { Value = "priceAsc", Text = "Price: Low to High", Selected = sortOrder == "priceAsc" },
        new SelectListItem { Value = "priceDesc", Text = "Price: High to Low", Selected = sortOrder == "priceDesc" }
    };
}

<!-- Use a flex container with inline alignment -->
<form method="get"
      asp-area="Public"
      asp-controller="Products"
      asp-action="Index"
      class="d-inline-flex align-items-center mb-3">

    <!-- Label -->
    <label for="sortOrder" class="me-2 mb-0">Sort by:</label>

    <!-- Dropdown with a fixed minimum width -->
    <select id="sortOrder"
            name="sortOrder"
            class="form-select me-2"
            style="width: auto; min-width: 130px;"
            asp-items="sortOptions">
    </select>

    <!-- Hidden fields for paging, if needed -->
    <input type="hidden" name="page" value="@currentPage" />
    <input type="hidden" name="pageSize" value="@pageSize" />

    <!-- Sort button -->
    <button type="submit" class="btn btn-primary">Sort</button>
</form>


<!-- Product listing -->
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">
    @foreach (var product in Model)
    {
        <div class="col d-flex justify-content-center">
            <div class="card product-card">
                <div class="img-link-wrapper">
                    <a asp-area="Public"
                       asp-controller="Products"
                       asp-action="DetailsByKey"
                       asp-route-productKey="@product.ProductKey">
                        <img src="@product.Images.FirstOrDefault(i => i.Size == EcomPlat.Data.Enums.ImageSize.Medium && i.IsMain == true)?.ImageUrl"
                             class="product-image"
                             alt="@product.Name" />
                    </a>
                </div>
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">@product.Price.ToString("C")</p>
                    <a asp-area="Public"
                       asp-controller="Products"
                       asp-action="DetailsByKey"
                       asp-route-productKey="@product.ProductKey"
                       class="btn btn-primary btn-sm mt-auto">
                        View
                    </a>
                </div>
            </div>
        </div>
    }
</div>

<!-- Paging controls -->
<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center mt-3">
        <li class="page-item @(currentPage <= 1 ? "disabled" : "")">
            <a class="page-link" asp-area="Public" asp-controller="Products" asp-action="Index" asp-route-page="@(currentPage - 1)" asp-route-pageSize="@(pageSize)" asp-route-sortOrder="@sortOrder">Previous</a>
        </li>
        @for (int i = 1; i <= totalPages; i++)
        {
            <li class="page-item @(i == currentPage ? "active" : "")">
                <a class="page-link" asp-area="Public" asp-controller="Products" asp-action="Index" asp-route-page="@i" asp-route-pageSize="@(pageSize)" asp-route-sortOrder="@sortOrder">@i</a>
            </li>
        }
        <li class="page-item @(currentPage >= totalPages ? "disabled" : "")">
            <a class="page-link" asp-area="Public" asp-controller="Products" asp-action="Index" asp-route-page="@(currentPage + 1)" asp-route-pageSize="@(pageSize)" asp-route-sortOrder="@sortOrder">Next</a>
        </li>
    </ul>
</nav>
