@model EcomPlat.Data.Models.Subcategory

@{
    this.ViewData["Title"] = "Delete Subcategory";
}

<h2>@this.ViewData["Title"]</h2>

<h3>Are you sure you want to delete this subcategory?</h3>
<div>
    <h4>Subcategory</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@this.Model.Name</dd>
        <dt class="col-sm-2">UrlKey</dt>
        <dd class="col-sm-10">@this.Model.SubcategoryKey</dd>
        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@this.Model.Category?.Name</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="SubcategoryId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
