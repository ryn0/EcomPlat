@model EcomPlat.Data.Models.ConfigSetting

@{
    this.ViewData["Title"] = "Add New Config Setting";
}

<h2>@this.ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="SiteConfigSetting" class="control-label"></label>
        <select asp-for="SiteConfigSetting" asp-items="this.ViewBag.SiteConfigSetting" class="form-control"></select>
        <span asp-validation-for="SiteConfigSetting" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Content" class="control-label"></label>
        <textarea asp-for="Content" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
