@model EcomPlat.Data.Models.ProductReview
@{
    ViewData["Title"] = "Delete Review";
}

<h2>@ViewData["Title"]</h2>

<div class="alert alert-warning">
    <h4>Are you sure you want to delete this review?</h4>
    <p><strong>Reviewer:</strong> @Model.ReviewerName</p>
    <p><strong>Rating:</strong> @Model.Rating</p>
    <p><strong>Comment:</strong> @Model.Comment</p>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ProductReviewId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
