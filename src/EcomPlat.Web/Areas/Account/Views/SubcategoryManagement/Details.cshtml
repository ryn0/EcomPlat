@model EcomPlat.Data.Models.Subcategory

@{
    this.ViewData["Title"] = "Subcategory Details";
}

<h2>@this.ViewData["Title"]</h2>

<div>
    <h4>Subcategory</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@this.Model.Name</dd>
        <dt class="col-sm-2">UrlKey</dt>
        <dd class="col-sm-10">@this.Model.SubcategoryKey</dd>
        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@this.Model.Category?.Name</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@this.Model.SubcategoryId" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
