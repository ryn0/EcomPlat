@model EcomPlat.Data.Models.Warehouse

@{
    ViewData["Title"] = "Delete Warehouse";
}

<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this warehouse?</h3>
<div>
    <h4>Warehouse</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">City</dt>
        <dd class="col-sm-10">@Model.City</dd>
        <dt class="col-sm-2">State/Region</dt>
        <dd class="col-sm-10">@Model.StateRegion</dd>
        <dt class="col-sm-2">Country</dt>
        <dd class="col-sm-10">@Model.CountryIso</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="WarehouseId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
