@model EcomPlat.Data.Models.BusinessDetails
@{
    ViewData["Title"] = "Delete Business Details";
}

<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Business Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">
            @Model.AddressLine1<br />
            @if (!string.IsNullOrEmpty(Model.AddressLine2))
            {
                @Model.AddressLine2

                <br />
            }
            @Model.City, @Model.StateRegion @Model.PostalCode<br />
            @Model.CountryIso
        </dd>
        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Phone</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">Address Type</dt>
        <dd class="col-sm-10">@Model.AddressType</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="BusinessDetailsId" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
