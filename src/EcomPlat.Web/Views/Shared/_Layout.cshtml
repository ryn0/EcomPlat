<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@this.ViewData["Title"] - Das Jars</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EcomPlat.Web.styles.css" asp-append-version="true" />
    <style>

        .product-card {
            width: 220px;
            border: 1px solid #ddd;
            border-radius: 4px;
            display: flex;
            flex-direction: column;
            margin-bottom: 10px;
        }

        /* Image wrapper to maintain layout */
        .img-link-wrapper {
            width: 100%;
            height: 200px;
            overflow: hidden;
            position: relative;
        }

        .product-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: block;
        }

        /* The card body has a fixed height to keep alignment consistent */
        .product-card .card-body {
            height: 200px;
            display: flex;
            flex-direction: column;
            height: 200px !important;
        }

        /* Title allows up to two lines, then truncates */
        .product-title {
          
            margin-bottom: 15px;
            line-height: 1.2em;
            /* 2 lines * 1.2em = 2.4em total height for the text block. */
 
            height: 5em !important;
        }

        /* Price row, slightly smaller space */
        .price-line {
            height: 18px;
            margin-bottom: 3px;
        }

        .flag-line {
            display: flex;
            align-items: center;
            margin-bottom: 2px;
        }

            .flag-line .flag-container {
                width: 20px;
                height: 10px;
                display: flex;
                align-items: center;
                justify-content: center;
                overflow: hidden;
                margin-right: 5px;
            }

                .flag-line .flag-container img {
                    max-width: 100%;
                    max-height: 100%;
                    object-fit: contain;
                }


        /* Buttons at the bottom */
        .button-row {
            margin-top: auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a href="~/"><img style="height:45px;" alt="Das Jars logo" src="~/images/das-jars.png" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                     
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="~/products">Products</a>
                        </li>
                    </ul>
                    @if (this.User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a asp-area="Account" asp-controller="Admin" asp-action="Index" class="nav-link text-dark">
                                    Admin Menu
                                </a>
                            </li>
                        </ul>
                    }
                    <!-- Shopping Cart Link -->
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a asp-area="Public" asp-controller="ShoppingCart" asp-action="Index" class="nav-link text-dark">
                                Cart @await Component.InvokeAsync("CartItemCount")
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @this.RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.UtcNow.Year - Das Jars - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await this.RenderSectionAsync("Scripts", required: false)
</body>
</html>
